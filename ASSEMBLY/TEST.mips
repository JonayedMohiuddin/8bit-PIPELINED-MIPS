# 0($io) => X ENABLE + DATA
# 1($io) => Y ENABLE + DATA
# 2($io) => UPDATE FLAG
# 3($io) => FLUSH FLAG
# 4($io) => KEYBOARD INPUT
# 15($io) => RAND INPUT

# zero
# t0 t1 t2 t3 t4
# s0 s1 s2 s3 
# a0 a1
# v0 v1
# io 
# sp

# x is 5 bit and y is 4 bit

# s2 = x of food
# s3 = y of food

main:
    j make_food
    after_make_food:
    sw $s2, 0($io)
    sw $s3, 1($io)
    sw $zero, 2($io)
    sw $zero, 3($io)
    j main

make_food:
    lw $s2, 15($io)
    lw $s3, 15($io)
    andi $s2, $s2, 31
    andi $s3, $s3, 15
    j after_make_food